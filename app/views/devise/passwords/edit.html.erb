<div class="bg-light py-3 py-md-5 h-100">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
        <div class="bg-white p-4 p-md-5 rounded shadow-sm">
          <div class="row">
            <div class="col-12">
              <div class="text-center mb-5">
                <h2>Change your password</h2>
              </div>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.hidden_field :reset_password_token %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row gy-3 gy-md-4 ">
              <div class="col-12">
                <%= f.label :password, class: 'form-label' do %>
                  New password <span class="text-danger">*</span>
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "email", autocomplete: "new-password", class: 'form-control' %>
                <p class="form-text text-muted">
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                </p>
              </div>
              <div class="col-12">
                <%= f.label :password_confirmation, class: 'form-label' do %>
                  Password Confirmation <span class="text-danger">*</span>
                <% end %>
                <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
              </div>
              <div class="col-12">
                <div class="d-grid">
                    <%= f.submit "Change my password", class: 'btn btn-primary btn-md' %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-12">
              <hr class="mt-5 mb-4 border-secondary-subtle">
              <div class="d-flex gap-2 gap-md-4 flex-column flex-md-row justify-content-md-center">
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

