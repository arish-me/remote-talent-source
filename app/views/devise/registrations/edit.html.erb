<div class="py-3 py-md-5 h-100">
  <div class="container">
    <div class="row justify-content-md-center">
      <div class="col-12 col-md-11 col-lg-8 col-xl-7 col-xxl-6">
        <div class="bg-white p-4 p-md-5 rounded shadow-sm">
          <div class="row">
            <div class="col-12">
              <div class="text-center mb-5">
                <h2>Edit <%= resource_name.to_s.humanize %></h2>
              </div>
            </div>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
            <div class="row gy-3 gy-md-4 ">
              <div class="col-12">
                <%= f.label :password, class: 'form-label' do %>
                  Password <span class="text-danger">*</span>
                <% end %>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
              <div class="col-12">
                <%= f.label :password_confirmation, class: 'form-label' do %>
                  Confirm Password<span class="text-danger">*</span>
                <% end %>
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="col-12">
                <%= f.label :current_password, class: 'form-label' do %>
                  Confirm Password<span class="text-danger">*</span>
                <% end %>
                  <%= f.password_field :current_password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="col-12">
                <div class="d-grid">
                    <%= f.submit "Update account", class: 'btn btn-primary btn-md' %>
                </div>
              </div>
            </div>
          <% end %>
          <div class="row">
            <div class="col-12">
              <hr class="mt-5 mb-4 border-secondary-subtle">
              <div class="d-flex justify-content-between">

                 <%= button_to "Cancel my account", registration_path(resource_name),
                      data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
                      method: :delete, class: 'btn btn-danger' %>
                <%= link_to "Back", :back, class: 'btn btn-outline-dark' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

