<div class="card py-3 mt-5">
  <div class="card-body">
    <h5 class="card-title">Looking someone for work?</h5>
    <p class="card-text">
      You need to provide some information, that will help us to find better
      opportunity for you, by clicking continue you are agree to provide
      information.
    </p>

    <%= form_for(@company, url: company_tab_path(id: current_user.id), method:
    :post) do |f|%> <%= render "shared/error_messages", resource: @company %>
    <div class="row gy-3 gy-md-4">
      <div class="col-12">
        <%= f.label :name, class: 'form-label' do %> Name
        <span class="text-danger">*</span>
        <% end %> <%= f.text_field :name, autofocus: true, autocomplete: "name",
        class: 'form-control' %>
      </div>

      <div class="col-12">
        <%= f.label :company_email, class: 'form-label' do %> Company Email
        <span class="text-danger">*</span>
        <% end %> <%= f.email_field :company_email, autofocus: true,
        autocomplete: "company_email", class: 'form-control' %>
      </div>

      <div class="col-12">
        <%= f.label :phone, class: 'form-label' do %> Phone
        <% end %> <%= f.text_field :phone, autofocus: true, autocomplete:
        "phone", class: 'form-control' %>
      </div>

      <div class="col-12">
        <%= f.label :website, class: 'form-label' do %> Website
        <% end %> <%= f.text_field :website, autofocus: true, autocomplete:
        "webiste", class: 'form-control' %>
      </div>

      <div class="col-12">
        <%= f.label :size, class: 'form-label' do %> Size of company
        <span class="text-danger">*</span>
        <% end %>
        <%= f.select :size, options_for_select(Company::COMPANY_SIZE.invert.to_a, selected: @company.size), { prompt: 'Select size' }, class: 'form-select' %>

      </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="col-12">
        <div class="d-grid">
          <%= f.submit "Continue", class: 'btn btn-primary btn-md' %>
        </div>
      </div>

      <%end%>
    </div>
  </div>
</div>
