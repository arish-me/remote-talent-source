<div data-controller="profile">
  <div class="relative inline-block" data-action="mouseover->profile#showEditIcon mouseout->profile#hideEditIcon">
    <span class="profile-name" data-profile-target="name"><%= @employee.first_name %> <%= @employee.last_name %></span>
    <button class="edit-icon hidden absolute right-0 top-0 p-1 text-gray-500 hover:text-gray-700" data-profile-target="editButton" data-action="click->profile#openEditModal">
      <i class="fas fa-edit"></i>
    </button>
  </div>
</div>