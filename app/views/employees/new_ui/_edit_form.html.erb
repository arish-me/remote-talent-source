<div class="container mx-auto px-4">
  <%= form_with(model: employee, data: { controller: "places", action: "google-maps-callback@window->places#initAutocomplete" }) do |form| %>
  <div class="grid gap-5">
    <div class="bg-white shadow rounded-lg p-4">
      <%= render partial: 'employees/new_ui/new_employee_about', locals: { form: form, employee: employee } %>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <%= render partial: 'employees/new_ui/new_bio', locals: { form: form } %>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <%= render partial: 'employees/new_ui/new_work_preferences', locals: { form: form } %>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <%= render partial: 'employees/new_ui/new_scheduling_link', locals: { form: form } %>
    </div>
    <div class="bg-white shadow rounded-lg p-4">
      <%= render partial: 'employees/new_ui/social_link', locals: { form: form } %>
    </div>

    <div class="flex justify-end mt-4">
      <%= form.submit "Finish Profile",
                class: 'bg-gray-800 text-white py-2 px-4 rounded',
                data: { controller: "forms--keyboard-submit", action: "form-submit#submit", form_submit_target: "submit" } %>
    </div>
  </div>
  <% end %>
</div>
