<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <div>
    <h5 class="text-lg font-semibold">Social Profiles</h5>
    <p class="text-gray-500 text-sm">Where can people learn more about you and your work?</p>
  </div>

  <div class="md:col-span-2 my-2">
    <div class="grid gap-6">
      <%= form.fields_for :social_link do |social_link_form| %>

        <div class="mb-3">
          <%= social_link_form.label :website, class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex items-center mt-1">
            <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">https://</span>
            <%= social_link_form.text_field :website, class: "block w-full rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="mb-3">
          <%= social_link_form.label :linkedin, class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex items-center mt-1">
            <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">linkedin.com/in/</span>
            <%= social_link_form.text_field :linkedin, class: "block w-full rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="mb-3">
          <%= social_link_form.label :github, class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex items-center mt-1">
            <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">github.com/</span>
            <%= social_link_form.text_field :github, class: "block w-full rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <div class="mb-3">
          <%= social_link_form.label :twitter, class: 'block text-sm font-medium text-gray-700' %>
          <div class="flex items-center mt-1">
            <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 sm:text-sm">twitter.com/</span>
            <%= social_link_form.text_field :twitter, class: "block w-full rounded-none rounded-r-md border-gray-300 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>
