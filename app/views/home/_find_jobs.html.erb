<section>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-4">
                <h4 class="fw-bold text-start"><%= t('hero.section_job.heading') %></h4>
            </div>
            <% Job.limit(8).each do |job| %>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card h-100 category-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                             <img src="<%= job.source_logo %>" class="img-fluid rounded-start me-3" alt="Company Logo" style="max-width: 80px;">
                            <h5 class="card-title mb-0 fw-bold"><%= job.source_name %></h5>
                        </div>
                        <p class="card-text fw-bold"><%= job.position %></p>
                        <p class="card-text"><%= truncate(job.description.body.to_plain_text, length: 150) %></p>

                    </div>
                    <div class='card-footer bg-transparent'>
                        <div class="d-flex justify-content-end">
                            <a href="<%= job.apply_url %>" target="_blank" class="btn btn-primary"><%= t(:apply_now) %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
        </div>
        <div class="d-flex justify-content-center">
            <%= link_to talent_jobs_path, class: "btn btn-outline-primary", target: "_blank" do %>
                <%= t('hero.section_job.see_all_jobs') %>
            <% end %>
        </div>
    </div>
</section>



