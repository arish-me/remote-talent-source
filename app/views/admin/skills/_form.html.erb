<%form_path = action == 'edit' ? admin_skill_path(skill) : admin_skills_path %>
<div class="container col-4">
  <div class="card mt-2">
    <div class="card-header bg-dark text-white">
      Edit Primary Role
    </div>
    <div class="card-body">
       <%= form_for(skill, url: form_path, local: true) do |form| %>
       <%= render "shared/error_messages", resource: skill %>
         <div class="mb-3">
          <%= form.label :category_id, class: 'form-label' do %>
            Category
            <span class="text-danger">*</span>
          <% end %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select a category' }, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= form.label :name, class: 'form-label' do %>
            First Name
            <span class="text-danger">*</span>
          <% end %>
          <%= form.text_field :name,
                          autofocus: true,
                          autocomplete: "name",
                          class: "form-control" %>
        </div>
        <div class="form-group d-flex justify-content-between">
          <%= form.submit "Submit", class: 'btn btn-sm btn-dark'%>
          <%= link_to 'Back', admin_skills_path, class: 'btn btn-sm btn-warning'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
