<%form_path = action == 'edit' ? admin_category_path(category) : admin_categories_path %>
<div class="container col-4">
  <div class="card mt-2">
    <div class="card-header bg-dark text-white">
      Edit Category
    </div>
    <div class="card-body">
       <%= form_for(category, url: form_path, local: true) do |form| %>
       <%= render "shared/error_messages", resource: category %>
        <div class="mb-3">
          <%= form.label :name, class: 'form-label' do %>
            First Name
            <span class="text-danger">*</span>
          <% end %>
          <%= form.text_field :name,
                          autofocus: true,
                          autocomplete: "name",
                          class: "form-control" %>
        </div>
        <div class="form-group d-flex justify-content-between">
          <%= form.submit "Submit", class: 'btn btn-sm btn-dark'%>
          <%= link_to 'Back', admin_categories_path, class: 'btn btn-sm btn-warning'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
