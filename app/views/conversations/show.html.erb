<section class="message-area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="chat-area">
                    <div class="chatbox">
                        <div class="modal-dialog-scrollable">
                            <div class="modal-content">
                                <div class="msg-head">
                                    <div class="row">
                                        <div class="col-8">
                                          <%data = @conversation.other_recipient(current_user) %>
                                            <div class="d-flex align-items-center">
                                                <span class="chat-icon"><img class="img-fluid" src="https://mehedihtml.com/chatbox/assets/img/arroleftt.svg" alt="image title"></span>
                                                <div class="flex-shrink-0">
                                                    <%= render AvatarComponent.new(avatarable: data[:object], variant: :medium, classes: "h-9 w-9 rounded-circle") %>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h3><%= data[:name] %></h3>
                                                    <p><%=  data[:heading]%></p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <ul class="moreoption">
                                                <li class="navbar nav-item dropdown">
                                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v" aria-hidden="true"></i></a>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="#">Action</a></li>
                                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                                        <li>
                                                            <hr class="dropdown-divider">
                                                        </li>
                                                        <li><a class="dropdown-item" href="#">Something else here</a></li>
                                                    </ul>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-body">
                                    <div class="msg-body">
                                        <%= turbo_stream_from @conversation %>
                                        <%= turbo_frame_tag @conversation do %>
                                        <ul id="messages" class="mt-8 space-y-2">

                                            <%= render @conversation.messages %>

                                        </ul>
                                        <% end %>
                                    </div>

                                </div>
                                <div class="send-box">
                                  <%= turbo_frame_tag "new_message" do %>
                                    <%= render "conversations/new_message", conversation: @conversation, message: @message %>
                                  <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>
    </div>
</section>


