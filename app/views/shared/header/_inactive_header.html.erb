<div class="container mx-auto">
  <%if @shadcn_enabled %>
    <div class="navbar bg-base-100">
      <div class="navbar-start">
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
            </svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
            <li>
              <%= link_to t('find_talent'), hiring_index_path, class: "nav-link p-2 text-dark" %>
            </li>
            <li>
              <%= link_to t('hero.find_jobs'), talent_jobs_path, class: "nav-link p-2 text-dark" %>
            </li>
          </ul>
        </div>
        <a href="<%= root_path %>" class="navbar-brand py-2">
          <%= image_tag 'remotetalentsource.svg' %>
        </a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
        </ul>
      </div>
      <div class="navbar-end">
        <% if user_signed_in? %>
          <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-sm btn-outline btn-error" %>
        <% else %>
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline-dark me-2" %>
          <%= link_to "Signup", new_user_registration_path, class: "btn btn-darl" %>
        <% end %>
      </div>
    </div>
  <%else%>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a href="<%=root_path%>" class='navbar-brand py-2'>
          <span>
            <%=image_tag 'remotetalentsource.svg'%>
          </span>
        </a>
        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mx-auto mb-2 mb-lg-0 text-center gap-3">
          </ul>
          <!-- Login and Signup Buttons -->
          <div class="d-flex">
            <% if user_signed_in? %>
              <%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-danger me-2" %>
            <% else %>
              <%= link_to "Login", new_user_session_path, class: "btn btn-outline-dark me-2" %>
              <%= link_to "Signup", new_user_registration_path, class: "btn btn-darl" %>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  <%end%>
  <%= yield %>
</div>