<div class="fixed inset-0 z-50 flex items-center justify-center hidden bg-gray-800 bg-opacity-50" data-profile-target="modal">
  <div class="bg-white rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-lg font-medium text-gray-900" id="modal-title">Modal Title</h2>
      <button type="button" class="text-gray-400 hover:text-gray-500" data-action="click->modal#close">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div id="modal-body">
      <%= yield %>
    </div>
  </div>
</div>
