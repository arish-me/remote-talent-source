<div class="dropdown">
  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
    Sort
  </a>

  <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">
    <li>
      <%= render SortButtonComponent.new(title: "Newest", name: :sort, sort_type: :newest, active: sort === :newest) %>
    </li>
    <li>
      <%= render SortButtonComponent.new(title: "Most Viewed", name: :sort, sort_type: :mostviewed, active: sort === :mostviewed) %>
    </li>
  </ul>
</div>
