<%= link_to job_path(job), class: "text-decoration-none developer-card-link" do %>
<div class="developer-card bg-white rounded-1 overflow-hidden p-4 ">
  <div class="row">
    <div class="col">
      <div class="bd-placeholder-img flex-shrink-0 me-3">
        <div class="d-flex align-items-end">
          <%if @job.talentsource? %>
                <%= render AvatarComponent.new(avatarable: job&.company, variant: :medium) %>
          <% else %>
            <img src="<%= @job.source_logo %>" alt="<%= @job.title %> logo" class="job-logo" loading="lazy" />
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-10">
      <div class="d-flex justify-content-between border-bottom mb-3">
        <div>
          <h4 class="mt-0"><%= hero %></h4>
          <p class="text-muted"><%= company_name %></p>
        </div>
        <div class="d-flex align-items-start">
            <span class="badge bg-primary text-white"><%= role_type %></span>
        </div>
      </div>
      <div class="d-flex justify-content-between">
        <div>
            <p><i class="bi bi-geo-alt-fill"></i> <%= preferred_location %></p>

            <% if countries.present? %>
              <p><i class="bi bi-globe-americas"></i>
                <%= countries %>
              </p>
            <% end %>
            <p><i class="bi bi-wallet-fill"></i> <%= salary_range %></p>
        </div>
        <div class="d-flex align-items-end">
            <span class="badge bg-warning text-black"><%= time_ago %> ago</span>
        </div>
      </div>
    </div>
  </div>
</div>
<%end %>
